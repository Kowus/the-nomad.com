<link rel="stylesheet" href="/stylesheets/src/prism.css">
<section id="intro"
         style="background:url({{podcast.content.banner_picture}}); -webkit-background-size: cover;background-size: cover;">

    <div class="shadow-overlay"></div>

    <div class="intro-content">
        <div class="row">

            <div class="col-twelve">

                <h1 style="color: white;text-shadow: 1px 1px 2px black;"><span
                        style="font-size: .6em">episode #{{podcast.no}}: </span>{{{podcast.title}}}</h1>
                <h5 style="color: white;text-transform: none;text-shadow: 1px 1px 2px black;"> | <i
                        class="icon icon-user"></i> <span>{{podcast.guest.name}}</span> | <i
                        class="icon icon-calendar"></i> <span class="podcast-date" data-date="{{podcast.createdAt}}"
                                                              style="color: white;"></span> | <i
                        class="icon icon-play"></i> <span id="played"
                                                          data-identifier="{{podcast._id}}">{{podcast.stats.played}}</span>
                </h5>
                <input value="{{podcast.content.src}}" hidden id="dompe">

                <input type="range" min="0" step=".01" value="0" id="stat_bar">
                <button class="button stroke ion ion-play" id="play_stat" title=""
                        style="text-shadow: 1px 1px 2px black;font-size: 2em; border-radius: 80px;"
                        data-ser="{{podcast._id}}"></button>

            </div>

        </div>
    </div>

</section>

<!-- Process Section
================================================== -->
<section id="process">

    <div class="row section-intro">
        <div class="col-twelve with-bottom-line">

            <h5>{{{podcast.subtitle}}}</h5>
            <h1 style="font-size: 2rem">● {{#each podcast.categories as |category|}}
                <a href="#" id="cats">{{category}}</a> ●
            {{/each}}</h1>
            <hr>

            <div style="text-align: left;">
                {{{podcast.content.text}}}
            </div>

            {{#each podcast.take_aways as |lesson|}}
                <blockquote class="text-left">
                    {{lesson}}
                    <cite class="text-right" style="font-size: 1.3em">
                        <a class="ion ion-social-twitter"> </a> |
                        <a class="ion ion-social-facebook"> </a>
                    </cite>
                </blockquote>
            {{/each}}
            <p class="lead" style="color: #353F49;">
                <span style="color: #3F3F3F; font-weight: 700;">{{{podcast.title}}}</span>
                <i>by</i> {{podcast.guest.name}}
            </p>
        </div>
        <div class="col-twelve" id="comments">
            <h2 style="margin: 50px auto; letter-spacing: 5px; word-spacing: 5px;">Comments</h2>

            <hr style="margin-bottom: 50px;">
            {{#each comments as |comment|}}

                <div class="text-left comment" data-_id="{{comment._id}}">
                    <div class="pull-left">
                        <img src="" class="comment-logo">
                        <span class="comm-user">{{comment.user.displayName}}</span></div>
                    <div class="pull-right">Controls</div>
                    <hr style="width: 80%;">
                    <div class="comment-content">
                        {{comment.content}}
                        <!--The Promise interface also allows jQuery's Ajax methods, including $.get(), to chain multiple .done(), .fail(), and .always() callbacks on a single request, and even to assign these callbacks after the request may have completed. If the request is already complete, the callback is fired immediately.-->
                        <br>
                        <small class="pull-right ion ion-clock"> {{comment.createdAt}}</small>
                        <hr style="clear: both; opacity:0;">


                        <div class="reply_zone">
                            {{>replies}}

                            <input placeholder="Post a reply" class="reply-box">
                        </div>

                    </div>
                    <hr style="margin-bottom: 50px;">
                </div>
            {{/each}}
            {{#if user}}

                <form action="/podcasts/comment" id="comment-form" data-podcast="{{podcast._id}}">
                    <textarea placeholder="Leave a Comment" required style="width: 100%; resize: none;"
                              name="comment"></textarea>
                    <input type="submit">
                </form>
            {{else}}
                <div style="border: 1px solid #ccc;">
                    <h3 style="margin: 50px auto;">Please <a href="/login?next=/podcasts/view/{{podcast.permalink}}">Login</a>
                        to comment</h3>
                </div>
            {{/if}}
        </div>
    </div>

</section> <!-- /process-->