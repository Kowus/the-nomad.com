{
  "name": "the-nomad.com",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "prestart": "grunt",
    "start": "node ./bin/www",
    "predev": "grunt",
    "dev": "grunt watch & nodemon --verbose"
  },
  "dependencies": {
    "aws-sdk": "^2.156.0",
    "body-parser": "~1.18.2",
    "compression": "^1.7.1",
    "connect-flash": "^0.1.1",
    "connect-multiparty": "^2.1.0",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.9",
    "dotenv": "^4.0.0",
    "email-templates": "^3.1.7",
    "express": "~4.15.5",
    "express-session": "^1.15.6",
    "hbs": "~4.0.1",
    "method-override": "^2.3.10",
    "mongoose": "^4.13.1",
    "morgan": "~1.9.0",
    "newrelic": "^2.4.0",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "redis": "^2.8.0",
    "secure-password": "^2.1.2",
    "serve-favicon": "~2.4.5",
    "sitemap": "^1.13.0"
  },
  "devDependencies": {
    "grunt": "^1.0.1",
    "grunt-autoprefixer": "^3.0.4",
    "grunt-contrib-cssmin": "^2.2.1",
    "grunt-contrib-uglify": "^3.1.0",
    "grunt-contrib-watch": "^1.0.0",
    "nodemon": "^1.12.1"
  },
  "nodemonConfig": {
    "ignore": [
      "public/*",
      "gruntfile.js",
      ".gtm/*",
      "scratch/"
    ],
    "watch": [
      "*.js",
      "*.json",
      "views/partials/*"
    ],
    "events": {
      "restart": "osascript -e 'display notification \"App restarted due to changes\" with title \"the-nomad.com\"'"
    },
    "delay": "2500"
  }
}
